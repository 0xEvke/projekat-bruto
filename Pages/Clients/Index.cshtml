@page
@model WebApplication2.Pages.Clients.IndexModel
@{
}

<br>

<h2>Lista klijenata</h2>
<a class='btn btn-primary btn-sm' href='/CLients/Create'>Novi Klijenat</a>
<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Ime</th>
			<th>Plata</th>
			<th>Radno mesto</th>
			<th>Adresa</th>

		</tr>
	</thead>
	<tbody>
		@foreach(var item in Model.listClients)
		{
			<tr>
				<td>@item.id</td>
				<td>@item.ime_prezime</td>
				<td>@item.bruto_neto</td>
				<td>@item.radno_mesto</td>
				<td>@item.adresa</td>
				<td>
					<a class="btn btn-primary btn-sm" href="/Clients/Edit?id=@item.id">Edit</a>
					<a class="btn btn-danger btn-sm" href="/Clients/Delete?id=@item.id">Delete</a>
				</td>

			</tr>
		}
		<br />
			<a asp-page-handler="Export" class="btn btn-primary">Exportuj</a>
	</tbody>
</table>